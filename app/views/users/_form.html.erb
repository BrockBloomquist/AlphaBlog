<div class="container">
  <%= render 'shared/errors', obj: @user %>

  <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>    
  <div class="row justify-content-center">
    <div class="col-10 justify-content-center">
        <div class="form-group row mt-4">
              <%= form.label :username, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a Username" %>
              </div>
          </div>

          <div class="form-group row mt-4">
              <%= form.label :email, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your Email Address" %>
              </div>
          </div>

          <div class="form-group row mt-4">
              <%= form.label :password, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
              </div>
          </div>

          <div class="form-group mt-3 d-flex justify-content-around">
            <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-light btn-lg") %>
          </div>
      <% end %>
    </div>
  </div>
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "d-flex justify-content-around text-info" %>
</div>